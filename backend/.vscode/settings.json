{
    "editor.rulers": [
        120
    ],
    "cursor.composer.shouldAutoAcceptDiffs": true,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "frontend": false,
        "node_modules": true,
        "**/.mypy_cache": true,
        "**/.ruff_cache": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.env.example": false,
        "**/.docker/**": false,
        "**/.cursor/**": false,
        "**/.dockerignore": false,
        "**/*.mdc": false,
        ".vscode": true
    },
    "search.exclude": {
        "**/.cursor/plans/**": true,
        "**/.cursor/rules/*.mdc": true
    },
    "cursor.general.globalCursorIgnoreList": [
        "**/.env",
        "**/credentials.json",
        "**/credentials.*.json",
        "**/secret.json",
        "**/secrets.json",
        "**/*.key",
        "**/*.pem",
        "**/*.pfx",
        "**/*.p12",
        "**/*.crt",
        "**/*.cer",
        "**/id_rsa",
        "**/id_dsa",
        "**/.ssh/id_*"
    ],
    "workbench.externalBrowser": "firefox",
    "workbench.editor.labelFormat": "medium",
    "flake8.enabled": false,
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "python.terminal.activateEnvironment": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll.ruff": "explicit",
            "source.organizeImports.ruff": "explicit"
        }
    },
    "accessibility.windowTitleOptimized": false,
    "peacock.affectStatusAndTitleBorders": false,
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#d33ec4",
        "activityBar.background": "#d33ec4",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#484e12",
        "activityBarBadge.foreground": "#e7e7e7",
        "sash.hoverBorder": "#d33ec4",
        "statusBar.background": "#b529a7",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#d33ec4",
        "statusBarItem.remoteBackground": "#b529a7",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "commandCenter.border": "#e7e7e799",
        "titleBar.activeBackground": "#b529a7",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#b529a799",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.color": "#b529a7",
    "editor.stickyScroll.enabled": true,
    "editor.stickyScroll.defaultModel": "outlineModel",
    "editor.stickyScroll.scrollWithEditor": true,
    "workbench.editor.autoLockGroups": {
        "workbench.editor.markdownPlan": true
    },
    "peacock.affectTitleBar": true
}
