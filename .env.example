SHOPIFY_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# Application
# =============================================================================
DEBUG=true
LOG_LEVEL=debug
BACKEND_CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173  # direnv: optional

# =============================================================================
# Frontend (Vite environment variables)
# =============================================================================
# VITE_API_URL is the base URL for API requests (without /api/v1 suffix)
# The Orval-generated code already includes /api/v1 in paths
# Leave empty for local dev with Vite proxy, set to backend URL for Docker
VITE_API_URL=http://localhost:8000
