# =============================================================================
# Database (used by docker-compose postgres service)
# =============================================================================
POSTGRES_USER=fotomalovanky
POSTGRES_PASSWORD=fotomalovanky
POSTGRES_DB=fotomalovanky

# Local development DATABASE_URL (for running alembic outside docker)
# Used when running: uv run alembic upgrade head
DATABASE_URL=postgresql+asyncpg://fotomalovanky:fotomalovanky@localhost:5439/fotomalovanky

# =============================================================================
# Mercure (Real-time SSE)
# Generate keys with: openssl rand -base64 32
# =============================================================================
MERCURE_PUBLISHER_JWT_KEY=change-me-publisher-secret-key
MERCURE_SUBSCRIBER_JWT_KEY=change-me-subscriber-secret-key
MERCURE_URL=http://localhost:3000/.well-known/mercure

